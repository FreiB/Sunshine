<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true">

<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="horizontal"
    android:padding="16dp">

    <LinearLayout
        android:layout_width="180dp"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TextView
            android:id="@+id/details_day_textview"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="24sp"
            android:textColor="@color/black"
            android:fontFamily="sans_serif_condensed"
            android:text="Today"/>

        <TextView
            android:id="@+id/details_date_textview"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="20sp"
            android:textColor="@color/grey_700"
            android:fontFamily="sans_serif_condensed"
            android:text="June 24"/>

    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TextView
            android:id="@+id/details_max_temp_textview"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="96sp"
            android:textColor="@color/black"
            android:fontFamily="sans_serif_light"
            android:text="21"/>

        <TextView
            android:id="@+id/details_min_temp_textview"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="48sp"
            android:textColor="@color/grey_700"
            android:fontFamily="sans_serif_light"
            android:layout_marginBottom="12dp"
            android:text="8"/>

        <TextView
            android:id="@+id/details_humidity_textview"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            style="@style/bottom_details_style"
            android:text="Humidity: 84%"/>

        <TextView
            android:id="@+id/details_wind_textview"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            style="@style/bottom_details_style"
            android:text="Wind: 6km/H NW"/>

        <TextView
            android:id="@+id/details_pressure_textview"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            style="@style/bottom_details_style"
            android:text="Pressure: 1014 hPa"/>

    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/details_icon_imageview"
            android:layout_width="144dp"
            android:layout_height="144dp"
            android:src="@drawable/art_clear"/>

        <TextView
            android:id="@+id/details_desc_textview"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:textAppearanceLarge"
            android:textColor="@color/grey_700"
            android:fontFamily="sans_serif_condensed"
            android:text="Clear"/>

    </LinearLayout>

</LinearLayout>
</ScrollView>
